# ========================================
# ADMIN SERVICE ENVIRONMENT VARIABLES
# ========================================
# Скопируйте этот файл в .env и заполните реальными значениями

# ===== APPLICATION SETTINGS =====
APP_NAME=Admin Service
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ===== DATABASE SETTINGS (Admin Service БД) =====
DATABASE_URL=postgresql+asyncpg://admin_user:admin_password@localhost:5432/admin_service_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=admin_service_db
DATABASE_USER=admin_user
DATABASE_PASSWORD=admin_password

# ===== AUTH SERVICE DATABASE (READ-ONLY) =====
# Для чтения User данных из Auth Service
AUTH_DB_URL=postgresql+asyncpg://auth_user:auth_password@localhost:5432/auth_service_db
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_service_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password

# ===== REDIS SETTINGS =====
REDIS_URL=redis://localhost:6379/3
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=3

# ===== CORS SETTINGS =====
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]
ALLOW_CREDENTIALS=true

# ===== SECURITY =====
# JWT Secret Key (ДОЛЖЕН СОВПАДАТЬ С AUTH SERVICE!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Internal API Key для межсервисного взаимодействия
INTERNAL_API_KEY=your-internal-api-key-change-this-in-production

# ===== EXTERNAL SERVICES =====
AUTH_SERVICE_URL=http://localhost:8000
PROFILE_SERVICE_URL=http://localhost:8002
SCHEDULE_SERVICE_URL=http://localhost:8001

# Timeouts для HTTP клиентов
SERVICE_TIMEOUT=30

# ===== CACHE TTL SETTINGS (в секундах) =====
CACHE_USER_TTL=300
CACHE_STUDIO_TTL=600
CACHE_CLASSROOM_TTL=600
CACHE_STATS_TTL=60

# ===== ADMIN DASHBOARD SETTINGS =====
DASHBOARD_RECENT_USERS=10
DASHBOARD_RECENT_ACTIVITIES=20
DASHBOARD_STATS_DAYS_BACK=30

# ===== PAGINATION =====
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# ===== LOGGING =====
LOG_LEVEL=INFO
