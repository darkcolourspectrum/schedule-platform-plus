# ===== APPLICATION SETTINGS =====
APP_NAME=Schedule Service
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ===== SERVER SETTINGS =====
HOST=0.0.0.0
PORT=8083

# ===== DATABASE SETTINGS (Schedule Service БД) =====
DATABASE_URL=postgresql+asyncpg://schedule_user:schedule_password@localhost:5432/schedule_service_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=schedule_service_db
DATABASE_USER=schedule_user
DATABASE_PASSWORD=schedule_password

# ===== AUTH SERVICE DATABASE (READ-ONLY для User данных) =====
AUTH_DB_URL=postgresql+asyncpg://auth_user:auth_password@localhost:5432/auth_service_db
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_service_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password

# ===== REDIS SETTINGS =====
REDIS_URL=redis://localhost:6379/4
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=4
REDIS_CACHE_TTL=3600

# ===== JWT SETTINGS (для проверки токенов) =====
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CORS SETTINGS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# ===== INTERNAL API KEY (для межсервисного взаимодействия) =====
INTERNAL_API_KEY=your-internal-api-key-change-in-production

# ===== ADMIN SERVICE SETTINGS =====
ADMIN_SERVICE_URL=http://localhost:8082
ADMIN_SERVICE_TIMEOUT=10

# ===== SCHEDULE SETTINGS =====
SCHEDULE_GENERATION_WEEKS=2
DEFAULT_LESSON_DURATION_MINUTES=60
SCHEDULE_TIMEZONE=Asia/Tomsk
WORKING_HOURS_START=09:00
WORKING_HOURS_END=20:00
